#!/bin/sh

set -e
set -u

# Prepare variables.
FILE=""
NAME=""
LABEL=""
TYPE=""

# Set variables from arguments.
while getopts 'f:n:l:t:' opt; do
  case $opt in
    f) FILE=$OPTARG ;;
    n) NAME=$OPTARG ;;
    l) LABEL=$OPTARG ;;
    t) TYPE=$OPTARG ;;
  esac
done

# Verify minimum requirements of Github is satisfied.
if [ ! "$FILE" ]; then
  echo "Minimum file (-f) must be provided."
  exit 1
fi

# Verify existence of the provided file.
if [ ! -e "$FILE" ]; then
  echo "Unable to find '$FILE'."
  exit 1
fi

# Default to use the filename of the provided file.
if [ ! "$NAME" ]; then
  NAME=$(basename $FILE)
fi

# Guess content type if not provided.
if [ ! "$TYPE" ]; then
  TYPE=$(file -b --mime-type $FILE)
fi

# Prepare url for upload.
URL="$UPLOAD_URL?name=$(urlencode $NAME)"
if [ "$LABEL" ]; then
  URL="$URL&label=$(urlencode $LABEL)"
fi

# Perform upload.
curl -s \
  -u "${GITHUB_ACTOR}:${GITHUB_TOKEN}" \
  -H "Content-Type: $TYPE" \
  -H "User-Agent: klakegg/docker-github-upload" \
  --data-binary @$FILE \
  "$URL" | jq .
